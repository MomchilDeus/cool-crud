{{#each users}}
<div class="card">
    <div class="card-body">
        <h2>ID: {{id}}</h2>
        <p class="names">{{firstName}} {{lastName}}</p>
        <div class="options">
            <div href="/{{id}}?_method=PUT" class="edit">EDIT</div>
            <form action="/{{id}}?_method=DELETE" method="POST" class="form">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" class="delete" value="Delete">
            </form>
        </div>
    </div>
    <div class="card-edit below hide">
        {{> _newUser}}
    </div>
</div>
{{/each}}